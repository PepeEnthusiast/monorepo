{
  "name": "@bitcoin-computer/node",
  "version": "0.17.1-beta.0",
  "description": "Server Side Library for the Bitcoin Computer",
  "contributors": [
    "Clemens Ley",
    "Laura Tardivo",
    "Vivek Singh"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/bitcoin-computer/monorepo/tree/main/packages/node"
  },
  "type": "module",
  "main": "dist/bcn.es.mjs",
  "homepage": "http://bitcoincomputer.io/",
  "author": {
    "name": "Clemens Ley",
    "email": "clemens@bitcoincomputer.io"
  },
  "private": false,
  "license": "CC-BY-ND-4.0",
  "bugs": {
    "url": "https://github.com/bitcoin-computer/monorepo/issues"
  },
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "./scripts/build.sh",
    "build-node": "docker build -t bitcoin-computer-node .",
    "cp-files": "./scripts/cp-files.sh",
    "clean-ltc-data": "rm -rf ./chain-setup/ltc-regtest/blockchain-data && rm -rf ./chain-setup/ltc-regtest/db-data",
    "dist-clean": "rm -rf dist",
    "down": "./scripts/down.py",
    "fund-ltc": "node --loader ts-node/esm ./scripts/fund.ts ltc",
    "fund-btc": "node --loader ts-node/esm ./scripts/fund.ts btc",
    "lint": "eslint src test",
    "lint-fix": "eslint src test --fix",
    "node-clean": "./scripts/node-clean.sh",
    "reset": "yes | ./scripts/reset.sh",
    "start": "node $(grep SRC_ENTRY .package.paths | cut -d '=' -f2)",
    "start-test": "node --loader ts-node/esm ./scripts/dev-setup.ts",
    "sync": "$(grep SYNC_START .package.paths | cut -d '=' -f2)",
    "setup": "./scripts/setup.py",
    "types": "tsc -p tsconfig.json",
    "test": "node --loader ts-node/esm  ./scripts/test.ts",
    "test-integration": "node --loader ts-node/esm ./scripts/test.ts",
    "test-unit": "npm run test -- -u",
    "up": "./scripts/up.py"
  },
  "dependencies": {
    "@babel/core": "^7.18.5",
    "@bitcoin-computer/lib": "^0.17.1-beta.0",
    "@bitcoin-computer/nakamotojs": "^0.17.1-beta.0",
    "@bitcoin-computer/tiny-secp256k1": "^2.2.1",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^16.18.16",
    "@types/sinon": "^10.0.11",
    "@types/sinon-chai": "^3.2.8",
    "argparse": "^2.0.1",
    "axios-mock-adapter": "^1.21.1",
    "bitcoind-rpc": "^0.9.1",
    "body-parser": "^1.19.0",
    "chai": "^4.3.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "ecpair": "^2.1.0",
    "edit-json-file": "^1.7.0",
    "elliptic": "^6.5.4",
    "exponential-backoff": "^3.1.0",
    "express": "^4.17.1",
    "express-rate-limit": "^6.2.0",
    "hash.js": "^1.1.7",
    "mocha": "^10.0.0",
    "pg-monitor": "^1.4.0",
    "pg-promise": "^10.11.1",
    "run-parallel": "^1.2.0",
    "sinon": "^14.0.0",
    "sinon-chai": "^3.7.0",
    "ts-node": "^10.4.0",
    "typeforce": "^1.18.0",
    "typescript": "^4.9.5",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.7.1",
    "zeromq": "6.0.0-beta.6"
  },
  "keywords": [
    "Bitcoin",
    "Litecoin",
    "Smart Contracts",
    "Javascript"
  ],
  "gitHead": "af40117bcb9616e631910f68c3b617aef629f027"
}
