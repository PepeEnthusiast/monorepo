{
  "name": "bitcoin-computer",
  "version": "0.16.0-beta.1",
  "description": "Lightweight Smart Contracts for Bitcoin and Litecoin",
  "contributors": [
    "Clemens Ley",
    "Laura Tardivo",
    "Vivek Singh"
  ],
  "bin": {
    "bitcoin-computer": "./scripts/install.js"
  },
  "files": [
    "scripts/install.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/bitcoin-computer/monorepo"
  },
  "type": "module",
  "homepage": "http://bitcoincomputer.io/",
  "author": {
    "name": "Clemens Ley",
    "email": "clemens@bitcoincomputer.io"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "cd /dist/packages/node && yarn start",
    "up": "cd packages/node && yarn up",
    "fund-ltc": "cd packages/node && yarn fund-ltc",
    "test": "cd packages/node && yarn test",
    "down": "cd packages/node && yarn down",
    "reset": "cd packages/node && yarn reset",
    "build-node": "docker build -t bitcoin-computer-node .",
    "prepare": "husky install",
    "create-version": "lerna version --force-publish",
    "check-obfuscation": "./scripts/check-obfuscation.sh",
    "husky-checks": "./scripts/husky-checks.sh",
    "prepublishOnly": "./scripts/check-obfuscation.sh",
    "validate-branch-for-deploy": ". scripts/validate-branch-for-deploy.sh && validate_branch"
  },
  "dependencies": {
    "@endo/static-module-record": "^0.7.6"
  },
  "devDependencies": {
    "@types/node": "^17.0.35",
    "edit-json-file": "^1.7.0",
    "husky": "^8.0.1",
    "lerna": "5.1.2",
    "path": "^0.12.7",
    "ts-node": "^10.8.0",
    "typescript": "^4.9.5",
    "url": "^0.11.0"
  }
}
